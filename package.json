{
  "name": "stack-explorer",
  "description": "Blog of ZK-Jackie, built with Astro",
  "type": "module",
  "version": "1.0.0-alpha.7",
  "author": "ZK-Jackie",
  "license": "MIT",
  "keywords": [
    "astro",
    "blog",
    "tailwindcss",
    "typescript"
  ],
  "repository": "https://github.com/ZK-Jackie/zk-jackie.github.io",
  "scripts": {
    "postinstall": "pnpm exec playwright install --with-deps chromium",
    "dev": "astro dev --mode development",
    "build:dev": "astro build --mode development",
    "build:prod": "astro build --outDir dist-prod --mode production && node scripts/main.js --target compression --dir dist-prod",
    "build:cf": "astro build --outDir dist-cf --mode cloudflare && node scripts/main.js --target compression --dir dist-cf",
    "build:gh": "astro build --outDir dist-gh --mode github && node scripts/main.js --target compression --dir dist-gh",
    "build": "pnpm run build:dev",
    "preview": "astro preview",
    "check": "astro check",
    "sync": "astro sync",
    "astro": "astro",
    "astro-upgrade": "pnpm dlx @astrojs/upgrade",
    "compress": "node scripts/main.js --target compression",
    "clean": "node scripts/main.js --target cleanup"
  },
  "dependencies": {
    "@astrojs/markdown-remark": "^6.3.7",
    "@astrojs/mdx": "^4.3.6",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.6.0",
    "@expressive-code/plugin-line-numbers": "^0.41.3",
    "@iconify-json/mdi": "^1.2.3",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.7",
    "@types/hast": "^3.0.4",
    "astro": "5.14.1",
    "astro-expressive-code": "^0.41.3",
    "astro-icon": "^1.1.5",
    "commander": "^14.0.1",
    "fuse.js": "^7.1.0",
    "glob": "^11.0.3",
    "hast-util-from-html": "^2.0.3",
    "hast-util-select": "^6.0.4",
    "hast-util-to-string": "^3.0.1",
    "hastscript": "^9.0.1",
    "html-minifier-terser": "^7.2.0",
    "kleur": "^4.1.5",
    "mdast-util-to-string": "^4.0.0",
    "p-limit": "^6.2.0",
    "picomatch": "^4.0.3",
    "playwright": "^1.56.0",
    "rehype": "^13.0.2",
    "rehype-katex": "^7.0.1",
    "rehype-mermaid": "^3.0.0",
    "remark-gemoji": "^8.0.0",
    "remark-math": "^6.0.0",
    "sharp": "^0.34.4",
    "tailwindcss": "^4.1.7",
    "terser": "^5.43.1",
    "tinyglobby": "^0.2.15",
    "typescript": "^5.8.3",
    "unist-util-visit": "^5.0.0",
    "vfile": "^6.0.3",
    "vite": "^6.3.6"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/language-server": "^2.15.4",
    "@types/picomatch": "^4.0.2",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^27.0.0",
    "vitest": "^3.2.4"
  }
}
