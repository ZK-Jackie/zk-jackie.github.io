{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "typeRoots": ["src/types", "node_modules/@types"],
    "types": ["vite/client", "astro/client", "src/types"],
    "paths": {
      "@/*": ["src/*"],
      "@types": ["src/types/index.ts"],
      "@types/*": ["src/types/*"],
      "@components/*": ["src/layouts/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@config": ["src/config/index.ts"],
      "@config/*": ["src/config/*"],
      "@config/types": ["src/config/types.ts"],
      "@utils/*": ["src/utils/*"],
      "@styles/*": ["src/styles/*"],
      "@assets/*": ["src/assets/*"],
      "@i18n/*": ["src/i18n/*"],
      "@plugins/*": ["src/plugins/*"]
    }
  }
}
